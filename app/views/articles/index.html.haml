- model_class = Article
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
- if current_user
  = link_to t('.new', :default => t("Nouvel")), new_article_path, :class => 'btn btn-primary'
  = link_to "Mes articles", { :action => 'index', :user_id => current_user.id }, :class => 'btn btn-primary'
%table.table.table-striped
  %tbody
    - @articles.each do |article|
      %tr
        .container
          .row
            %h3
              = link_to article.title, article_path(article.id)
            %p= article.content
            .text-right
              = link_to article.user.username, user_path(:id => article.user_id)
              \|
              = article.created_at
      %hr
